# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true



# Exceptions ==============================================
[*.md]
trim_trailing_whitespace = false

[package.json]
indent_style = space
indent_size =  2

[*.yml]
indent_style = space
indent_size = 2
