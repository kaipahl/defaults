{
	"env": {
		"browser": true,
		"es6": true,
		"node": true, // needed for 'require'
		"mocha": true
	},
	"rules": {
		"block-spacing": "error",
		"comma-dangle": [ "error", {
			"arrays": "never",
			"exports": "never",
			"functions": "never",
			"imports": "never",
			"objects": "never"
		}],
		"comma-spacing": "error",
		"curly": "error",
		"dot-notation": "error",
		"eqeqeq": "error",
		"key-spacing": "error",
		"new-cap": "error",
		"no-console": "off",
		"no-debugger": "error",
		"no-eval": "error",
		"no-loop-func": "error",
		"no-mixed-spaces-and-tabs": "error",
		"no-multi-spaces": "error",
		"no-shadow": "error",
		"no-spaced-func": "error",
		"no-underscore-dangle": "error",
		"quotes": ["error", "single", {
			"allowTemplateLiterals": true
		}],
		"semi": "error",
		"semi-spacing": "error",
		"space-infix-ops": "error",
		"space-unary-ops": "error",
		"strict": 0,

		// CM9 ESLinting
		"no-undef": "error",
		"no-unused-vars": "error"
	},
	"globals": {
		"console": true,
		"jQuery": true,
		"$": true,
		"expect":true,
		"cy": true
	},
	"parserOptions": {
		"sourceType": "module"
	}
}
